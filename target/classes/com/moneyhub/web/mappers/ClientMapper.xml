<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.moneyhub.web.mappers.ClientMapper">
    <resultMap type="com.moneyhub.web.domains.ClientDTO" id="CLIENT">
        <id column="CID" property="cid"/>
        <result column="CSTATE" property="cstate"/>
        <result column="LEVEL" property="level"/>
        <result column="HUB_ACCOUNT" property="hubAccoint"/>
        <result column="PWD" property="pwd"/>
        <result column="REG" property="reg"/>
        <result column="WDD" property="wdd"/>
          
    </resultMap>

    <select id="getUser" resultMap="CLIENT">
        select * from client
    </select>
    <insert id="insert">
        insert into users (cstate, level, hubAccoint, cid, pwd, reg, wdd) values (
            #{cstate}, #{level}, #{hubAccoint}, #{cid}, #{pwd}, #{reg}, #{wdd}
        )
    </insert>
 

</mapper>